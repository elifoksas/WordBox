<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".view.WordsFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/knowCV"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="know"
            android:textColor="@color/darkText"
            android:textSize="24sp"
            android:layout_gravity="center">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/wordCV"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knowCV">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wordTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="word"
                android:textColor="@color/darkText"
                android:textSize="24sp">

            </TextView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/elma"
                android:layout_gravity="center"
                android:layout_margin="15dp">

            </ImageView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/knowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/check"
                app:iconGravity="textEnd"
                app:iconTint="@color/darkText"
                tools:ignore="SpeakableTextPresentCheck"
                android:layout_margin="10dp">

            </Button>

            <Button
                android:id="@+id/dontKnowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/clear"
                app:iconGravity="textEnd"
                app:iconTint="@color/darkText"
                tools:ignore="SpeakableTextPresentCheck"
                android:layout_margin="10dp">

            </Button>

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dontKnowCV"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordCV">

        <TextView
            android:id="@+id/dontKnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="don't know"
            android:textColor="@color/darkText"
            android:textSize="24sp"
            android:layout_gravity="center">

        </TextView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>